<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".NavigationFrame">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/pageBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/brown"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica"
                android:gravity="bottom|center"
                android:text="Home"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/shoppingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Shop"
                android:textAllCaps="false"
                android:textSize="11sp" />

            <Button
                android:id="@+id/kitchenOverview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Pantry"
                android:textAllCaps="false"
                android:textSize="11sp" />

            <Button
                android:id="@+id/recipesButton"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|center"
                android:text="Recipes"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/home_icon" />

            <ImageView
                android:id="@+id/shoppingIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24" />

            <ImageView
                android:id="@+id/overviewIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ingredient_icon" />

            <ImageView
                android:id="@+id/recipeIcon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="88dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_action_name" />
        </LinearLayout>

    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView5"
        android:name="com.example.kitchenkompanion.HomePage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_home_page" />

</androidx.constraintlayout.widget.ConstraintLayout>